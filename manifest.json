{
  "manifest_version": 2,

  "name": "Legible",
  "description": "This script cleanly displays atricle-formatted content",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "legible.js", "jqueryui.js"],
	  "css": [
		  "legStyle.css",
		  "jqueryui.js"
	  ]
    }
  ],
  "web_accessible_resources": [
      "legStyle.css",
	  "closeIcon.png",
	  "optionsIcon.png",
	  "jquery.js",
	  "jqueryui.css"
  ],
  "browser_action": {
    "default_icon": "Legible.png"
  },
  "permissions": [
    "activeTab",
	"tabs",
    "https://ajax.googleapis.com/"
  ]
}